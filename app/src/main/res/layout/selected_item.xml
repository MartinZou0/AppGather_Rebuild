<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/select_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plusitem"
            android:id="@+id/plus_item"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/app_logo"
            android:layout_toEndOf="@+id/plus_item"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/work"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_selected_appname"
            android:layout_toEndOf="@id/app_logo"
            android:text="工作"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/startmenu"
            />

    </RelativeLayout>

</LinearLayout>